<% @days.each do |day| %>
  <h3><%= day[:description] %></h3>
  <% items_by_day = @all_items.select { |item| item[:day] == day[:id] } %>
  <ul>
    <% items_by_day.each do |item| %>
      <li><%= item[:title] %><%= ": " + item[:description] if item[:description].present? %> 
        <button><%= link_to('Edit', edit_item_path(item[:id])) %></button> 
        <button><%= link_to('Delete', delete_item_path(item[:id]), method: :delete, data: { confirm: 'Are you sure you want to delete this list item?' }) %></button>
      </li>

    <% end %>
  </ul>
    <button><%= link_to('New List Item', new_item_path(day[:description])) %></button>
<% end %>
