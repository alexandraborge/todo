<h2>Edit List Item: "<%= @item_title %>"</h2>
<form action="/update" method='post'>
  <label for="title">Title: </label>
  <input type="text" name='title' placeholder="<%= @item_title %>">
  <label for="description">Description: </label>
  <input type="text" name='description' placeholder="<%= @item_description %>">
  <input type="hidden" name='id' value="<%= @item_id %>">
  <input type="hidden" name='previous_title' value="<%= @item_title %>">
  <input type="hidden" name='previous_description' value="<%= @item_description %>">
  <input type="submit">
</form>