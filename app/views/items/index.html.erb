<% @days.each do |day| %>
  <h3><%= day[:description] %></h3>
  <% items_by_day = @all_items.select { |item| item[:day] == day[:id] } %>
  <ul>
    <% items_by_day.each do |item| %>
      <li><%= item[:title] %></li>
    <% end %>
  </ul>
    <button><%= link_to('New List Item', new_item_path(day[:description])) %></button>
<% end %>